<CycloneDDS>
  <Domain>
    <Discovery>
      <ParticipantIndex>0</ParticipantIndex>
      <!-- <Peers>
        <Peer Address="${ROBOT_IP}"/>
      </Peers> -->
    </Discovery>
    <General>
      <AllowMulticast>false</AllowMulticast>
      <EnableMulticastLoopback>true</EnableMulticastLoopback>
      <Interfaces>
        <!-- The loopback device is required for local communication -->
        <!-- <NetworkInterface address="127.0.0.1"/> -->
        <NetworkInterface address="${YOUR_IP}"/>
      </Interfaces>
      <Transport>default</Transport>
    </General>
    <!-- The following lines are necessary if transport is set to tcp -->
    <!-- <TCP>
      <Port>1234</Port>
    </TCP> -->
  </Domain>
</CycloneDDS>
